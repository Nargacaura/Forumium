<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %}Welcome!{% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        {# Run `composer require symfony/webpack-encore-bundle` to start using Symfony UX #}
        {% block stylesheets %}
            {{ encore_entry_link_tags('app') }}
        {% endblock %}

        {% block javascripts %}
            {{ encore_entry_script_tags('app') }}
        {% endblock %}
    </head>

    <body>
        <header>
            <nav>
            <h2 class="name">Forumium</h2>
            <p class="navigation"><a href="{{ path('app_home') }}">Accueil</a> &middot; <a href="{{ path('search_topics') }}">Rechercher</a> &middot;
            {% if app.user is null %}
                <a href="{{ path('app_register') }}">Inscription</a> &middot; <a href="{{ path('app_login') }}">Connexion</a>
            {% else %}
                <a href="{{ path('app_dashboard') }}">Tableau de bord</a> &middot; <a href="{{ path('app_logout') }}">Déconnexion</a>
            {% endif %}</p>
            </nav>
        </header>
        <div class="content">
            {% block body %}{% endblock %}
        </div>
    </body>
</html>

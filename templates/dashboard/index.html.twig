{% extends 'base.html.twig' %}

{% block title %}Hello DashboardController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Tableau de bord de {{ app.user.username }}</h1>

    <h2>Topics</h2>
    <a href="{{ path('new_topic') }}" type="button">Nouveau topic</a>
    <ul>
    {% for topic in topics %}
        <li><a href="{{ path('app_topic', {id: topic.id}) }}"><h3>{{ topic.titre }}</h3></a>
        <a type="button" href="{{ path('edit_topic', {id: topic.id}) }}">Editer</a>
        <form method="post" action="#" onsubmit="return confirm('Voulez-vous VRAIMENT supprimer ce topic? Plus personne ne pourra s'aider de votre topic...')">
            <input type="hidden" name="_method" value="DELETE">
            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ topic.id) }}">
            <button>Supprimer</button>
        </form>
    {% endfor %}
    </ul>
</div>
{% endblock %}
